    "eslint-plugin-react": "^7.3.0",
    "eslint-watch": "^3.1.2",
    "jest": "^21.0.2",
    "lodash": "^4.17.4",
    "polished": "^1.7.0",
    "prop-types": "^15.5.10",
    "react": "^15.6.1",
